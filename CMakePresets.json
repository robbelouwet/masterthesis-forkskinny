{
  "version": 2,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic"
      }
    },
    {
      "name": "debug-simd-flags",
      "displayName": "Debug SIMD Flags",
      "binaryDir": "${sourceDir}/cmake-build-debug-simd",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS_INIT": "-ftree-vectorize -march=native -fopt-info-internals -fopt-info-vec-missed"
      }
    }
  ]
}
